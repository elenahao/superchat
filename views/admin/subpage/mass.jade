div.gm-user
    - var formURL = '/admin/api/mass/group'
    form#questTable(action=formURL,method="POST")
        input(type="hidden",name="msg_id",id="msg_id",value="#{msg_id}")
        input(type="hidden",name="media_id",id="media_id",value="#{media_id}")
        div.gm-search-bar
            div.col-xs-4
                select.form-control.gname(name="group_id", required="required")
                    each group in groups
                        option(value="#{group.id}") #{group.name}
            a.btn.btn-primary.btn-sm.active.gm-search(role="button") 群发
    a.btn.btn-primary.btn-sm.active(role="button" href="/admin/massMessage" style="margin-top:10px;display:inline-block;vertical-align:middle;") 新建图文消息
    span.active.tips(style="display:inline-block;padding-top:10px;vertical-align:middle;margin-left:10px;color:green;font-size:12px;")
