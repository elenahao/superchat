div.gm-user
    div.gm-search-bar
        div.col-xs-4
            input.form-control(type="text")
        a.btn.btn-primary.btn-sm.active.gm-search(role="button")
            | 搜索
        div.gm-user-data
            span
                | 玩家总数：1000
            span
                | 昨日玩家：1000
            span
                | 今日玩家：1000

    div.gm-question-form
        table.table.table-striped.gm-topic-table
            thead
                tr
                    th
                        | 排名
                    th
                        | 用户名
                    th
                        | 等级
                    th
                        | 对战次数
                    th
                        | 经验值
            tbody
                each user in users
                    tr
                        td(scope="row")
                            | #{user.rank}
                        td
                            img.img-rounded(src="#{user.avatar}" alt="")
                            | #{user.name}
                        td
                            | #{user.level}
                        td
                            | #{user.times}
                        td
                            | #{user.exp}
    nav
        ul.pagination
            each page in pages
                if page.isCurrent
                    li.active
                        a(href="#{page.link}") #{page.text}
                else
                    li
                        a(href="#{page.link}") #{page.text}