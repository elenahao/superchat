div.gm-user
    - var formURL = '/admin/api/group/edit/'
    form#questTable(action=formURL,method="POST")
        input(type="hidden",name="gname",id="gname")
        div.gm-search-bar
            div.col-xs-4
                input.form-control.qname(type="text")
            a.btn.btn-primary.btn-sm.active.gm-search(role="button") 搜索
            a.btn.btn-primary.btn-sm.active.gm-add(role="button") 新增
            a.btn.btn-primary.btn-sm.active.gm-refresh(role="button", href="/admin/api/group/add") 刷新
    div.gm-question-form
        table.table.table-striped.gm-topic-table
            thead
                tr
                    th
                        | ID
                    th
                        | 组名称
                    th
                        | 组人数
                    th
                        | 操作
            tbody
                each group in groups
                    tr
                        td(scope="row")
                            | #{group.id}
                        td
                            | #{group.name}
                        td
                            | #{group.count}
                        td
                            a.btn.btn-sm.btn-edit(href="#")
                                | 编辑
                            a.btn.btn-sm.btn-delete(href="#")
                                | 删除
    nav
        ul.pagination
            each page in pages
                if page.isCurrent
                    li.active
                        a(href="#{page.link}") #{page.text}
                else
                    li
                        a(href="#{page.link}") #{page.text}