mixin navItem(item)
    a(href="#{item.href}") #{item.name}

nav.navbar.navbar-inverse.navbar-fixed-top
    div.container
        div.navbar-header
            button.navbar-toggle.collapsed(type="button",data-toggle="collapse",data-target="#navbar",aria-expanded="false",aria-controls="navbar")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/") Super 8
        div.collapse.navbar-collapse#navbar
            ul.nav.navbar-nav
                each item in sitenavs
                    if item.isActive
                        li.active
                            +navItem(item)
                    else
                        li
                            +navItem(item)
